{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["esnext"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "lib",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "experimentalDecorators": true
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
